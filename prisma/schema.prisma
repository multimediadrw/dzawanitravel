// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Model untuk admin users
model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin_users")
}

// Model untuk paket umroh
model UmrohPackage {
  id          String   @id @default(uuid())
  name        String
  price       Int
  duration    String
  departure   String
  description String   @db.Text
  features    String[] @default([])
  imageUrl    String?
  isPopular   Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("umroh_packages")
}

// Model untuk galeri foto
model GalleryImage {
  id        String   @id @default(uuid())
  imageUrl  String
  caption   String?
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gallery_images")
}

// Model untuk testimoni
model Testimonial {
  id        String   @id @default(uuid())
  name      String
  location  String
  content   String   @db.Text
  rating    Int      @default(5)
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("testimonials")
}

// Model untuk FAQ
model FAQ {
  id        String   @id @default(uuid())
  question  String   @db.Text
  answer    String   @db.Text
  category  String   @default("general")
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("faqs")
}

// Model untuk konten halaman mitra
model MitraContent {
  id        String   @id @default(uuid())
  section   String   @unique // bisnis, keunggulan, cara-bergabung, testimoni, faq
  title     String
  subtitle  String?
  content   String   @db.Text
  imageUrl  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mitra_contents")
}

// Model untuk pendaftaran mitra
model MitraRegistration {
  id              String   @id @default(uuid())
  namaMitra       String
  namaPasangan    String?
  nikKtp          String
  alamat          String   @db.Text
  kodePos         String
  kabupaten       String
  provinsi        String
  noHp            String
  nomorRekening   String
  namaBank        String
  cabangBank      String
  status          String   @default("pending") // pending, approved, rejected
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("mitra_registrations")
}
